generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  id String @id

  name                    String
  voiceGeneratorChannelId String?
  defaultUserLimit        Int?

  autoRoleEnabled Boolean  @default(false)
  autoRoleIDs     String[] @default([])

  welcomeChannelId String?
  welcomeMessage   String? @default("ðŸ‘‹ Bem-vindo(a) {user.mention} a **{guild.name}**! ðŸŽ‰")

  welcomeEnabled    Boolean @default(false)
  farewellChannelId String?
  farewellMessage   String? @default("ðŸ˜¥ Adeus **{user.tag}**... Sentiremos sua falta.")
  farewellEnabled   Boolean @default(false)

  voiceChannels VoiceChannel[]
  users         User[]
  roleSelector  RoleSelector?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoleSelector {
  id          String   @id @default(cuid())
  guildId     String   @unique
  guild       Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)
  channelId   String
  messageId   String?
  title       String   @default("ðŸŽ­ Seletor de Cargos")
  description String   @default("Escolha seus cargos no menu abaixo! Para remover, basta desmarcar a opÃ§Ã£o.")
  roles       SelectorRole[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SelectorRole {
  id          String       @id @default(cuid())
  roleId      String
  label       String
  description String?
  emoji       String?
  selector    RoleSelector @relation(fields: [selectorId], references: [id], onDelete: Cascade)
  selectorId  String
  createdAt   DateTime     @default(now())

  @@unique([selectorId, roleId])
}

model User {
  id            String         @id
  username      String
  guildId       String
  guild         Guild          @relation(fields: [guildId], references: [id], onDelete: Cascade)
  ownedChannels VoiceChannel[] @relation("ChannelOwner")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model VoiceChannel {
  id        String   @id
  name      String
  guildId   String
  guild     Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)
  ownerId   String
  owner     User     @relation("ChannelOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  userLimit Int
  isLocked  Boolean  @default(false)
  status    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
